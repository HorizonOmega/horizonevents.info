---
import Layout from '@/layouts/Layout.astro';
import Section from '@/components/Section.astro';
import CollaboratorsGrid from '@/components/CollaboratorsGrid.astro';
---

<Layout 
  title="Team - Horizon Events"
  description="Meet the team behind Horizon Events - experts in AI safety event management and facilitation."
>
  <Section>
    <h1 class="text-4xl md:text-5xl font-bold mb-8 text-white">Our Team</h1>
    
    <p class="text-lg text-gray-300 mb-12 max-w-3xl mx-auto text-center">
      Horizon Events brings together experienced professionals dedicated to advancing AI safety through 
      high-impact events and community building.
    </p>
    
    <CollaboratorsGrid />
    
    <div class="mt-16 text-center">
      <h2 class="text-2xl font-semibold text-white mb-4">Join Our Team</h2>
      <p class="text-gray-400 mb-6 max-w-2xl mx-auto">
        We're always looking for talented individuals passionate about AI safety and event management. 
        If you're interested in contributing to our mission, we'd love to hear from you.
      </p>
      <a 
        href="mailto:team@horizonevents.info"
        class="inline-block px-6 py-2.5 text-orange-500 border border-orange-500 hover:bg-orange-500 hover:text-white transition-all duration-200 text-sm font-medium uppercase tracking-wider"
      >
        Get in Touch
      </a>
    </div>
  </Section>
</Layout>