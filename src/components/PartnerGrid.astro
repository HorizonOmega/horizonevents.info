---
import partners from '@/data/partners.json';
---

<div class="grid grid-cols-2 md:grid-cols-3 gap-8 items-center justify-items-center">
  {partners.map((partner) => (
    <a 
      href={partner.url}
      class="bg-white/5 rounded-xl p-8 w-full flex items-center justify-center hover:bg-white/10 transition-colors"
      target="_blank"
      rel="noopener noreferrer"
    >
      <div class="text-center">
        <div class="text-2xl font-semibold text-white mb-2">{partner.name}</div>
      </div>
    </a>
  ))}
</div>