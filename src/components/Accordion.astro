---
export interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<details class="group mb-6">
  <summary class="cursor-pointer bg-slate-700/20 rounded-lg p-4 hover:bg-slate-700/30 transition-colors list-none">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-semibold text-slate-100">{title}</h3>
      <svg class="w-5 h-5 text-slate-400 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </summary>
  
  <div class="mt-4 pl-4">
    <ul class="space-y-2">
      {items.map((item) => (
        <li class="text-slate-300 before:content-['â€¢'] before:text-orange-300 before:mr-2">
          {item}
        </li>
      ))}
    </ul>
  </div>
</details>