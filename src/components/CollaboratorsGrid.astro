---
import collaborators from '@/data/collaborators.json';
---

<div class="grid grid-cols-2 md:grid-cols-3 gap-8">
  {collaborators.map((person) => (
    <div class="text-center">
      <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-gray-800 border border-gray-700 flex items-center justify-center">
        <div class="text-lg font-light text-gray-400">
          {person.name.split(' ').map(n => n[0]).join('')}
        </div>
      </div>
      <h3 class="font-medium text-gray-200 mb-1 text-sm">{person.name}</h3>
      <p class="text-xs text-gray-500">{person.role}</p>
    </div>
  ))}
</div>