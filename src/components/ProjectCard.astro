---
export interface Props {
  title: string;
  description: string;
  link?: string;
}

const { title, description, link } = Astro.props;
---

<div class="bg-slate-800/20 backdrop-blur-sm rounded-2xl p-8 border border-slate-700/30 hover:border-slate-600/40 hover:bg-slate-800/30 transition-all duration-300">
  <h3 class="text-xl font-semibold mb-4 text-slate-100">{title}</h3>
  <p class="text-slate-400 leading-relaxed mb-4">{description}</p>
  {link && (
    <a 
      href={link}
      class="inline-flex items-center text-orange-300 hover:text-orange-200 transition-colors font-medium"
    >
      Learn more â†’
    </a>
  )}
</div>